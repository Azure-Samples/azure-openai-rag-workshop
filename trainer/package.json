{
  "name": "proxy",
  "version": "1.0.0",
  "description": "Proxy API for Azure OpenAI",
  "private": true,
  "type": "module",
  "exports": "./src/app.ts",
  "scripts": {
    "start": "fastify start -l info dist/app.js",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch\" \"npm:dev:start\"",
    "dev:start": "fastify start --pretty-logs --ignore-watch=.ts$ -w -l debug dist/app.js",
    "docker:build": "docker build --tag proxy .",
    "docker:run": "docker run --rm --publish 3000:3000 --env-file .env proxy"
  },
  "dependencies": {
    "@azure/identity": "^4.0.1",
    "@fastify/autoload": "^5.0.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/http-proxy": "^9.3.0",
    "@fastify/sensible": "^5.0.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-cli": "^6.0.1",
    "fastify-plugin": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "concurrently": "^8.2.0",
    "fastify-tsconfig": "^2.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
